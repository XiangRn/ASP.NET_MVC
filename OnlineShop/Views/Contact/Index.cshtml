<section class="contact py-lg-4 py-md-3 py-sm-3 py-3">
    <div class="container py-lg-5 py-md-4 py-sm-4 py-3">
        <h3 class="title text-center mb-lg-5 mb-md-4 mb-sm-4 mb-3">Liên Hệ Đến Chúng Tôi</h3>
        <div class="contact-list-grid">
       
            <div class=" agile-wls-contact-mid">
                <div class="form-group contact-forms">
                    <input type="text" id="txtName" class="form-control" placeholder="Họ Và Tên">
                </div>
                <div class="form-group contact-forms">
                    <input type="text" id="txtMobile" class="form-control" placeholder="Số Điện Thoại">
                </div>
                <div class="form-group contact-forms">
                    <input type="text" id="txtAddress" class="form-control" placeholder="Địa Chỉ">
                </div>
                <div class="form-group contact-forms">
                    <input type="email" id="txtEmail" class="form-control" placeholder="Email">
                </div>
                <div class="form-group contact-forms">
                    <textarea id="txtContent" class="form-control" rows="3"></textarea>
                </div>
                <button id="btnSend" type="submit" class="btn btn-block sent-butnn">Send</button>
              
            </div>
           
        </div>
    </div>
    <!--//contact-map -->
</section>
@section jsFooter{


    <script src="~/Assets/Client/js/controller/contactController.js"></script>
}