@using PagedList.Mvc
@model PagedList.IPagedList<Models.Framework.User>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section Header{
    <h1 class="mt-4">Setting for Users</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Setting for Users</li>
    </ol>
}
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table mr-1"></i>
        Category List
    </div>
    @using (Html.BeginForm("Index","User",FormMethod.Get))
    {
        <div class="row">
            <div class="col-lg-12">
                <div class="col-md-4">
                    <input type="text" value="@ViewBag.searchString" name="searchString" />
                </div>
                <div class="col-md-4">
                    <button type="submit">Tìm kiếm</button>
                </div>
            </div>
        </div>
    }

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Created Date</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>ModifiedBy</th>
                        <th>ModifiedDate</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>#</th>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Created Date</th>
                        <th>Phone</th>
                        <th>Address</th>
                        <th>Email</th>
                        <th>ModifiedBy</th>
                        <th>ModifiedDate</th>
                        <th>Status</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)//Model này sử dụng để đại diện cho List
                    {
                        <tr id="row_@item.ID">
                            <td>
                                <a href="~/Admin/User/Update/@item.ID">Sửa</a>||
                                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.ID }, new AjaxOptions
                           {
                               Confirm = "Bạn có muốn xóa tài khoản này",
                               OnComplete = "$('row_" + @item.ID + "').remove()",
                               HttpMethod = "Post"
                           })
                            </td>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@(@item.CreatedDate.HasValue ? @item.CreatedDate.Value.ToString("dd/MM/yyyy") : "")</td>
                            <td>@item.Phone</td>
                            <td>@item.Address</td>
                            <td>@item.Email</td>
                            <td>@item.ModifiedBy</td>
                            <td>@item.ModifiedDate</td>
                            <td>@(@item.Status ? "Active" : "Blocked")</td>

                        </tr>
                    }


                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page,@searchString=ViewBag.searchString }))

        </div>
    </div>
</div>

