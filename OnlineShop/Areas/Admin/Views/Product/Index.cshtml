<!-- Modal -->
<div class="modal fade" id="imageManamages" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Modal Header</h4>
            </div>
            <div class="modal-body">
              <div id="imageList"></div>
                <div class="clear"></div>
                <input type="button" id="btnChooImages" value="Chọn Ảnh" class="btn btn-primary"/>
               <input type="hidden" id="hidProductID" value="0"/>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-success"  id="btnSaveImages" value="Save"/>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>


